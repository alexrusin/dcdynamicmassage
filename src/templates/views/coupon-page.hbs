<div class="couponToPrint container p-4 mx-auto">
        {{#if coupon }}
            <div class="flex justify-center">
                <coupon class="coupon w-4/5 md:w-2/3 lg:w-1/3" :data="{{coupon}}" :full-text="true"></coupon>
            </div>
            <div class="printCouponButton mt-8 flex justify-center">
                <button type="button" class="font-semibold rounded px-4 py-2 uppercase text-sm md:text-base border-4 hover:border-gray-400 text-blue-500 hover:text-blue-700 bg-white" onclick="window.print()">Print Coupon</button>
            </div>
        {{else}}
            <p class="text-center mt-6 text-2xl">Sorry, the coupon you are looking for is not available at this time</p>
        {{/if}}
</div>
