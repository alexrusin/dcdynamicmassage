<div class="container p-4 mx-auto couponToPrint">
        {{#if coupon }}
            <div class="flex justify-center">
                <coupon class="w-4/5 coupon md:w-2/3 lg:w-1/3" :data="{{coupon}}" :full-text="true"></coupon>
            </div>
            <div class="flex justify-center mt-8 printCouponButton">
                <button type="button" class="px-4 py-2 text-sm font-semibold uppercase bg-white border-4 border-gray-500 rounded md:text-base hover:bg-gray-500 hover:text-white" onclick="window.print()">Print Coupon</button>
            </div>
        {{else}}
            <p class="mt-6 text-2xl text-center">Sorry, the coupon you are looking for is not available at this time</p>
        {{/if}}
</div>
